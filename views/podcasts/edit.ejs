<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 class="center font-violet">Edit <%= podcast.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/podcasts/<%= podcast._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control placeholder-violet border-violet font-violet" type="text" name="podcast[name]" value="<%= podcast.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control placeholder-violet border-violet font-violet" type="text" name="podcast[image]" value="<%= podcast.image %>">
                </div>
                <!--<div class="form-group">-->
                <!--    <input class="form-control" type="number" name="podcast[price]" value="<%=podcast.price%>" min="0.00" step="0.10">-->
                <!--</div> -->
                <div class="form-group">
                    <input class="form-control placeholder-violet border-violet font-violet" type="text" name="podcast[website]" value="<%= podcast.website %>">
                </div>
                <div class="form-group">
                    <input class="form-control placeholder-violet border-violet font-violet" type="text" name="podcast[description]" value="<%= podcast.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-yellow btn-block">Submit!</button>
                </div>
            </form>
            <a class="font-violet" href="/podcasts">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>