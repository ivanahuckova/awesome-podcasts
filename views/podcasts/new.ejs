<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 class="center font-violet">Create a New Podcast</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/podcasts" method="POST">
                <div class="form-group">
                    <input class="form-control placeholder-violet border-violet font-violet" type="text" name="name" placeholder="name">
                </div>
                <div class="form-group">
                    <input class="form-control placeholder-violet border-violet font-violet" type="text" name="image" placeholder="image url">
                </div>
                <!-- <div class="form-group">
                    <input class="form-control" type="number" name="price" placeholder="price" min="0.00" step="0.10">
                </div> -->
                <div class="form-group">
                    <input class="form-control placeholder-violet border-violet font-violet" type="text" name="website" placeholder="website">
                </div>
                <div class="form-group">
                    <input class="form-control placeholder-violet border-violet font-violet" type="text" name="description" placeholder="description">
                </div>
                <div class="form-group placeholder-violet border-violet font-violet">
                    <button class="btn btn-lg btn-yellow btn-block">Submit!</button>
                </div>
            </form>
            <a class="font-violet" href="/podcasts">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>